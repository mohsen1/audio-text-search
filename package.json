{
  "name": "audio-text-search",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "prisma generate && ./scripts/deploy-db.sh && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "cf:dev": "wrangler pages dev -- pnpm dev",
    "cf:build": "prisma generate && next build",
    "cf:deploy": "wrangler pages deploy .vercel/output/static --project-name=audio-text-search",
    "cf:deploy:prod": "pnpm run cf:build && pnpm run cf:deploy",
    "d1:setup": "./scripts/setup-d1.sh",
    "d1:local": "wrangler d1 execute audio-text-search-db --local",
    "d1:remote": "wrangler d1 execute audio-text-search-db --remote",
    "d1:backup": "wrangler d1 export audio-text-search-db --remote --output=backup-$(date +%Y%m%d-%H%M%S).sql"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/adapter-libsql": "^6.18.0",
    "@prisma/client": "^6.11.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/formidable": "^3.4.5",
    "@types/next-auth": "^3.15.0",
    "@types/pg": "^8.15.4",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "formidable": "^3.5.4",
    "lucide-react": "^0.525.0",
    "next": "15.3.5",
    "next-auth": "^4.24.11",
    "pg": "^8.16.3",
    "prisma": "^6.11.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "shadcn": "^2.9.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "jsdom": "^26.1.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "wrangler": "^4.45.0"
  }
}
